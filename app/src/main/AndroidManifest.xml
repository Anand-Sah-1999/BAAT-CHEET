<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.baatcheet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/baat_cheet_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baat_cheet_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutDeveloper"></activity>
        <activity
            android:name=".Chat_Activity"
            android:label="@string/title_activity_chat_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Friend_Requests_Display"
            android:label="Friend Requests"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ShowUserProfile"
            android:label="Profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Settings"
            android:label="Settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Find_Friends"
            android:label="Find Friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabbedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Register"
            android:label="Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>