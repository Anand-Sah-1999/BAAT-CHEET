<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_screen_gradient">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:onClick="goBack"
        android:src="@drawable/ic_arrow_back_white_24dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_picX"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/default_dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#FFFFFF"
        android:layout_toRightOf="@id/back"/>

    <TextView
        android:id="@+id/displayNameX"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        android:text="Display Name"
        android:fontFamily="@font/artifika"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/profile_picX" />


    <TextView
        android:id="@+id/lastSeenX"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:text="Last Seen"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_below="@id/displayNameX"
        android:layout_toRightOf="@id/profile_picX"/>



</RelativeLayout>